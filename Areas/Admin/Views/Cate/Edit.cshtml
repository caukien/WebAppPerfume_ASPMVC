@model WebAppPerfume.Models.CATEGORy
@{
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}
@{ 
    Html.RenderPartial("AdminHeader");
}
<div class="container-fluid">
    <div class="row">
        @{ 
            Html.RenderPartial("AdminSidebar");
        }

        <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
            <div class="d-flex justify-content-between flex-wrap flex-md nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                <h1 class="h2">Chỉnh sửa: @Model.NAME</h1>
                <div class="btn-toolbar mb-2 mb-md 0">
                </div>
            </div>

            <div class="col py-3">
                <div class="row">
                    <div class="col">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="~/Admin/Cate/Index">Dashboard</a></li>
                                <li class="breadcrumb-item active">@Model.NAME</li>
                            </ol>
                        </nav>
                    </div>
                    <div class="col text-end fw-lighter">
                    </div>
                </div>

            </div>


            <form action="~/Admin/Cate/Edit/@Model.CATEID" method="POST">
                <input type="hidden" value="@Model.CATEID" name="CATEID"/>
                <div class="row form-group mb-4">
                    <div class="col">
                        <label for="firstName">Tên</label>
                        <input type="text" class="form-control" id="name" name="name" value="@Model.NAME" required>
                    </div>
                </div>

                <div class="form-group mb-4">
                    <button type="submit" class="btn btn-primary">Cập nhật</button>

                    <button type="button" class="btn btn-danger" data-bs-toggle="modal" id="deleteButton" data-bs-target="#deleteModal">Xóa</button>

                </div>

            </form>



            <div class="modal fade" tabindex="-1" role="dialog" id="deleteModal">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <div class="modal-title">Thông báo.</div>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <p>
                                Bạn thực sự muốn xóa <b class="fw-bold">@Model.NAME</b> chứ?
                            </p>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                            <form action="~/Admin/Cate/Delete/@Model.CATEID?_method=DELETE" method="POST" class="position-relative">
                                <button type="submit" class="btn btn-primary">Xác nhận</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
</div>