
@{
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}
@{
    Html.RenderPartial("AdminHeader");
}
<div class="container-fluid">
    <div class="row">
        @{
            Html.RenderPartial("AdminSidebar");
        }

        <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
            <div class="d-flex justify-content-between flex-wrap flex-md nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                <h1 class="h2">THÊM DANH MỤC</h1>
                <div class="btn-toolbar mb-2 mb-md 0">
                </div>
            </div>

            <div class="col py-3">
                <div class="row">
                    <div class="col">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item">
                                    <a href="@Url.Action("Index","Cate")">Dashboard</a>
                                </li>
                                <li class="breadcrumb-item active">New Category</li>
                            </ol>
                        </nav>
                    </div>
                </div>

            </div>


            <form action="~/Admin/Cate/Add" method="POST">
                <div class="row form-group mb-4">
                    <div class="col">
                        <label for="firstName">Tên danh mục</label>
                        <input type="text" class="form-control" id="name" name="name" value="" required>
                    </div>
                </div>

                <div class="form-group mb-4">
                    <button type="submit" class="btn btn-primary">Thêm</button>
                </div>
            </form>
        </main>
    </div>
</div>
