@model List<WebAppPerfume.Models.OrderDetail>
@{
    ViewBag.Title = "Detail";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
    int i = 0;
}
@{
    Html.RenderPartial("AdminHeader");
}
<div class="container-fluid">
    <div class="row">
        @{
            Html.RenderPartial("AdminSidebar");
        }

        <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
            <div class="d-flex justify-content-between flex-wrap flex-md nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                <h1 class="h2">Chi tiết đơn hàng</h1>
                <div class="btn-toolbar mb-2 mb-md 0">
                    <div class="btn-group me-2">
                        @*<a href="@Url.Action("Add", "Cate")" class="btn btn-sm btn-outline-secondary">+ Thêm</a>*@
                    </div>
                </div>
            </div>
            
            @if (Model != null)
            {
                <div class="table-responsive">
                    <table class="table table-striped table-sm">
                        <thead>
                            <tr>
                                <th scope="col">STT</th>
                                <th scope="col">Tên sản phẩm</th>
                                <th scope="col">Ảnh</th>
                                <th scope="col">Giá</th>
                                <th scope="col">Số lượng</th>
                            </tr>
                        </thead>

                        <tbody>
                            @foreach (var element in Model)
                            {
                                i++;
                                <tr class="align-middle">
                                    <td>@i</td>
                                    <td>@element.proName</td>
                                    <td><img src="@element.proPIC" height="70px" /></td>
                                    <td>@string.Format("{0:#,0}", element.proPrice)</td>
                                    <td>@element.qty</td>
                                    <td class="text-end">
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <h1 class="text-center">Không có dữ liệu</h1>
            }
        </main>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js" integrity="sha384-mQ93GR66B00ZXjt0YO5KlohRA5SY2XofN4zfuZxLkoj1gXtW8ANNCe9d5Y3eG5eD" crossorigin="anonymous"></script>
