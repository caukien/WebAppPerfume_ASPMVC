@model List<WebAppPerfume.Models.CATEGORy>

@{
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
    int i = 0;
}
@{
    Html.RenderPartial("AdminHeader");
}

@{ 
    Html.RenderPartial("_Noti");
}
<div class="container-fluid">
    <div class="row">
        @{
            Html.RenderPartial("AdminSidebar");
        }

        <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
            <div class="d-flex justify-content-between flex-wrap flex-md nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                <h1 class="h2">Danh mục</h1>
                <div class="btn-toolbar mb-2 mb-md 0">
                    <div class="btn-group me-2">
                        <a href="@Url.Action("Add", "Cate")" class="btn btn-sm btn-outline-secondary">+ Thêm</a>
                    </div>
                </div>
            </div>

            @if(Model != null) {
                <div class="table-responsive">
                    <table class="table table-striped table-sm">
                        <thead>
                            <tr>
                                <th scope="col">STT</th>
                                <th scope="col">Tên danh mục</th>
                                <th scope="col" class="text-end">Thao tác</th>
                            </tr>
                        </thead>

                        <tbody>
                            @foreach (var element in Model)
                            {
                                i++;
                                <tr class="align-middle">
                                    <td>@i</td>
                                    <td>@element.NAME</td>
                                    <td class="text-end">

                                        <div class="d-flex flex-row justify-content-end gap-2">

                                            <a href="~/Admin/Cate/Edit/@element.CATEID" type="button" class="btn btn-warning btn-small">
                                                <i class="bi bi-pencil"></i>
                                            </a>

                                            <form action="~/Admin/Cate/Delete/@element.CATEID?_method=DELETE" method="POST" class="position-relative">
                                                <button type="submit" class="btn btn-danger btn-small">
                                                    <i class="bi bi-person-x"></i>
                                                </button>
                                            </form>

                                        </div>


                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }else {
            <h1 class="text-center">Không có dữ liệu</h1>
            }
        </main>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js" integrity="sha384-mQ93GR66B00ZXjt0YO5KlohRA5SY2XofN4zfuZxLkoj1gXtW8ANNCe9d5Y3eG5eD" crossorigin="anonymous"></script>